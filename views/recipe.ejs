<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- Font-awesome -->
    <script src="https://kit.fontawesome.com/bb1892d46f.js" crossorigin="anonymous"></script>
     <!--Swiper CSS  -->
     <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
     <!-- Swiper JS -->
     <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
   
  <!-- Custom CSS -->
  <link rel="stylesheet" href="css/style.css">

</head>
<body>

    <style>
          .my-swiper .swiper-slide img {
    display: block;
    width: 400px;
    height: 300px;
    object-fit: cover;
    border-radius: 25px;
  }

  .swiper-container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 50vh; 
  }

    #trending{
    height: 60vh;
    display: flex;
    justify-content: center;
    align-items: center;
}

#trending h1{
    margin: 0 20px;
}
.swiper {
    width: 100%;
    height: 100%;
  }


  .my-swiper .swiper-slide {
    text-align: center;
    font-size: 18px;
    background: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 10%;
    
  }



    </style>

    <nav>
        <img src="/image/onice-high-resolution-logo-transparent (1).png" alt="logo-img">
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/recipe">Recipes</a></li>
            <li><a href="/contact">Contact</a></li>
        </ul>
    </nav>

  
    <div class="search-bar">
        <div class="row">
            <input  type="text" id="input-box" placeholder="Search Recipes" autocomplete="off">
            <i class="fa-solid fa-magnifying-glass"></i>
            <button></button>
        </div>
    </div>


    <section id="trending">
        <h1>Trending Recipe</h1>
       <!-- Swiper -->
       <div class="swiper-container my-swiper">
        <div class="swiper-wrapper">
            <% recipeData.forEach(recipe => { %>
                <div class="swiper-slide">
                    <img src="<%= recipe.image %>" alt="<%= recipe.title %>">
                    <p><%= recipe.title %></p>
                </div>
            <% }); %>
        </div>
        <!-- Add Pagination -->
        <div class="swiper-pagination"></div>
    </div>
    
      
</section>


   
    <!-- Initialize Swiper -->
   <script>
 const swiperRecipes = new Swiper(".my-swiper", {
    slidesPerView: 3,
    centeredSlides: false,
    spaceBetween: 10,
    grabCursor: true,
    pagination: {
        el: ".swiper-pagination",
        clickable: true,
    },
});
  </script> 
    
    <script src="js/main.js"></script>

</body>
</html>