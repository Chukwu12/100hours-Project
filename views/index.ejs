<body>

<section id="login-form">
    <div class="container">
        <div class="signin-signup">
            <form action="" class="sign-in-form" method="post">
                <h2 class="title">Sign in</h2>
                <div class="input-field">
                    <i class="fa-solid fa-user"></i>
                    <input type="text" placeholder="Username" />
                </div>
                <div class="input-field">
                    <i class="fa-solid fa-lock"></i>
                    <input type="password" placeholder="Password" />
                </div>
                <input type="submit" value="login" class="btn">
                <p class="social-txt">Or Sign in with socal platform</p>
                
                <div class="social-container">
                    <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
                    <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
                </div>
            </form>
            <form action="" class="sign-up-form" method="post">
                <h2 class="title">Sign Up</h2>
                <div class="input-field">
                    <i class="fa-solid fa-user"></i>
                    <input type="text" placeholder="Username" />
                </div>

                <div class="input-field">
                    <i class="fa-solid fa-envelope"></i>
                    <input type="email" placeholder="Email" name="email"/>
                </div>

                <div class="input-field">
                    <i class="fa-solid fa-lock"></i>
                    <input type="password" placeholder="Password" />
                </div>
                <input type="submit" value="Sign up" class="btn">
                <p class="social-txt">Or Sign in with socal platform</p>
                <div class="social-container">
                    <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
                    <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
                </div>
            </form>
        </div>
            
            <div class="panels-container">
                <div class="panel left-panel">
                    <div class="content">
                    <h3>Explore new Recipes</h3>
                    <p>Discover new dishes, save your favorites, and enjoy step-by-step instructions to create mouthwatering meals for any occasion. 
                        Let's embark on a flavorful journey together and make every meal a delightful experience!</p>
                        <button class="panel-btn">Sign In</button>
                    </div>
                <img src="/image/undraw_sign_in_re_o58h.svg" alt="" class="image">
            </div>

            <div class="panel right-panel">
                <div class="content">
                <h3>Explore new Recipes</h3>
                <p></p>
                    <button class="panel-btn">Sign In</button>
                </div>
            <img src="/image/undraw_login.svg" alt="" class="image">
        </div>
        </div>
    </div>
</section>
   
   













