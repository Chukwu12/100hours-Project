<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= healthRecipes.title %></title>
    <!-- Font-awesome -->
    <script src="https://kit.fontawesome.com/bb1892d46f.js" crossorigin="anonymous"></script>
    <!-- Glide.js CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@glidejs/glide/dist/css/glide.core.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@glidejs/glide/dist/css/glide.theme.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <nav>
        <img src="/image/onice-logo.png" alt="logo-img">
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/recipe">Recipes</a></li>
            <li><a href="/recipeInfo">Saved Recipes</a></li>
            <li><a href="/profile.ejs">Create Recipes</a></li>
        </ul>
    </nav>

    <div class="search-bar">
        <div class="row">
            <input type="text" id="input-box" placeholder="Search Recipes" autocomplete="off">
            <i class="fa-solid fa-magnifying-glass"></i>
            <button></button>
        </div>
    </div>



    <section id="healthy">
        <h1>Healthy Recipes</h1>
        <!-- Glide -->
        <div class="glide">
            <div class="glide__track" data-glide-el="track">
                <ul class="glide__slides">
                    <% healthRecipes.forEach(recipe => { %>
                        <li class="glide__slide">
                            <div class="glide-card">
                                <div class="glide-card-image">
                                    <img src="<%= recipe.image %>" alt="<%= recipe.title %>">
                                    <div class="overlay"></div>
                                </div>
                                <p><%= recipe.title %></p>
                                <div class="glide-card-content">
                                
                                    <p>Servings: <i class="fa-regular fa-user"></i> <%= recipe.servings %></p>
                                    <p><i class="fa-solid fa-clock"></i> <%= recipe.readyInMinutes %> minutes</p>
                                    <p>Ingredients: <i class="fa-solid fa-book"></i> <%= recipe.numberOfIngredients %></p>
                                </div>
                                <div class="glide-card-memory">
                                    <form class="col-1" action="/recipe/likeRecipe/<%= recipe.id %>?_method=PUT" method="POST">
                                        <button class="btn btn-primary fa fa-heart" type="submit"></button>
                                    </form>
                                    <form class="col-1" action="/recipe/favoriteRecipe/<%= recipe.id %>" method="POST">
                                        <button class="btn btn-primary fa fa-star" type="submit"></button>
                                    </form>
                                    <button class=" btn btn-primary fa fa-trash"  type="submit"> <%= recipe.likes %>
                                    <% if (recipe.user && recipe.user.id === user.id) { %>
                                        <form class="col-1" action="/recipe/deleteRecipe/<%= recipe.id %>?_method=DELETE" method="POST" class="col-1">
                                         
                                        </form>
                                        
                                    <% } %>
                                </div>
                                <button class="view-recipe-btn" data-recipe-id="<%= recipe.id %>">View Recipe</button>
                            </div>
                        </li>
                    <% }); %>
                </ul>
            </div>
            <div class="glide__bullets" data-glide-el="controls[nav]">
                <button class="glide__bullet" data-glide-dir="=0"></button>
                <button class="glide__bullet" data-glide-dir="=1"></button>
                <button class="glide__bullet" data-glide-dir="=2"></button>
                <button class="glide__bullet" data-glide-dir="=3"></button>
                <button class="glide__bullet" data-glide-dir="=4"></button>
                <button class="glide__bullet" data-glide-dir="=5"></button>
            </div>
        </div>
    </section>



     <!-- Glide.js -->
    <script src="https://cdn.jsdelivr.net/npm/@glidejs/glide/dist/glide.min.js"></script>
    <!-- Initialize Glide -->
    <script>
        new Glide('.glide', {
            type: 'carousel',
            startAt: 0,
            perView: 3,
            gap: 20
        }).mount();

       
    </script>
    

    <script src="https://kit.fontawesome.com/bb1892d46f.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@glidejs/glide/dist/glide.min.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>
